@model IEnumerable<TravelOn.Models.Review>
@{
    ViewBag.Title = "Home Page";
}




<div class="row clearSpace">

    <div id="myCarousel" class="carousel slide container" data-ride="carousel">

        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->

        <div class="carousel-inner" role="listbox">
            <div class="item active" style="background-image:url(https://media-cdn.tripadvisor.com/media/photo-o/09/82/90/09/siesta-beach.jpg)">
                <div class="carousel-caption">
                    <h3>Sandbox Easton</h3>
                        <p>This secret beach will keep you coming back for the fresh breez</p>
                </div>
            </div>

            <div class="item" style="background-image:url(https://t-ec.bstatic.com/images/hotel/max1024x768/410/41074377.jpg)">
                <div class="carousel-caption">
                    <h3>Central Sack Hotel</h3>
                    <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
                </div>
            </div>

            <div class="item" style="background-image:url(https://s-ec.bstatic.com/images/hotel/max1024x768/376/37644077.jpg)">
                <div class="carousel-caption">
                    <h3>Asukusa Din</h3>
                    <p>Enjoy some local delicacy at this unique establishment</p>
                </div>
            </div>

            <div class="item" style="background-image:url(https://c1.staticflickr.com/8/7369/12974085683_525428d239_b.jpg)">

                <div class="carousel-caption">
                    <h3>Robot Cabaret</h3>
                    <p>Nothing like the Tokyo nightlife adventure!</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="row clearSpace">
    <div class="intro">
        <h1>Let's go somewhere</h1>
        <p class="lead">The number one travel review site. Better informed. Better planned. Better travel.
At TravelOn, we believe in the power of travel — and in helping you make the most of every trip. With hundreds of traveler reviews, we can help you make the right choice when you shop for hotels, restaurants and attractions.
         </p>
        <p><a href="~/Reviews/Contents" class="btn btn-primary btn-lg">See All Reviews &raquo;</a></p>
    </div>
</div>

